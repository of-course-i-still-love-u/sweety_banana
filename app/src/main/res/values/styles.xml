<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text">
        <item name="android:fontFamily">@font/mohave</item>
    </style>

    <style name="Text.Agent">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">100sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Text.AgentBG">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">110sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Text.RoleAndTypeHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>

    </style>
    <style name="Text.RoleDetail">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Text.AgentDetail">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    
</resources>